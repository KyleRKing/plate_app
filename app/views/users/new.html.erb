<h1>RoaD RageR: Sign Me Up!</h1>

<%= form_for @user do |form| %>
	<%= form.text_field :fname, :placeholder => "First Name" %></br>
	<%= form.text_field :lname, :placeholder => "Last Name" %></br>
	<%= form.text_field :email, :placeholder => "Email" %></br>
	<%= form.password_field :password, :placeholder => "Password" %></br>
	<%= form.password_field :password_confirmation, :placeholder => "Password (Enter Again)" %></br></br>

	<%= form.submit %>
<% end %>

