<h1>Log In</h1>

<%= form_for :login do |f| %>

  <div>
    <%= f.text_field :email, :placeholder => "email" %>
  </div>

  <div>
    <%= f.password_field :password, :placeholder => "password" %>
  </div>

  <div>
    <%= f.submit 'Log In' %>
  </div>
  
<% end %>

<%= link_to "Log Out", logout_path, method: :delete %>